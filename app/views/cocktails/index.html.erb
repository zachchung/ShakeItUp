<div style="height:60px"></div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">

      <h1>All cocktails</h1>

      <% @cocktails.each do |cocktail| %>
        <div class="card p-3 mb-2">
          <h4><%= link_to cocktail.name, cocktail_path(cocktail) %></h4>
        </div>
      <% end %>

      <%= cl_image_tag "erusuuww1yqkhdcipwav", width: 400, height: 300, crop: :fill %>
      <%= "Test the scrollbar: I love cocktails, I can drink everything you got!" * 100 %>
    </div>
  </div>
</div>
